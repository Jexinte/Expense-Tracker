{
    "name": "mamad/expense-tracker",
    "description": "An CLI application that allows users to CRUD their expenses",
    "autoload": {
        "psr-4": {
            "Mamad\\ExpenseTracker\\": "src/",
            "Config\\": "config/",
            "Entity\\": "src/Entity/",
            "Enumeration\\": "src/Enumeration/",
            "Service\\": "src/Service/",
            "Command\\":"src/Command/"
        }
    },
    "authors": [
        {
            "name": "Yokke",
            "email": "mdembelepro@gmail.com"
        }
    ],
    "scripts": {
        "fix-style": "./vendor/bin/php-cs-fixer fix --config=php-cs-fixer.php",
        "all-tests" :"./vendor/bin/phpunit tests",
        "g-run":"./vendor/bin/grumphp run"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.62",
        "phpro/grumphp": "^2.7",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "11"
    }
    
}
